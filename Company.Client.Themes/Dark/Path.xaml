<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Style.Path.ForegroundFill"
           TargetType="Path">
        <Setter Property="Fill" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Control, Mode=FindAncestor}}" />
        <Setter Property="Stretch" Value="Uniform" />
    </Style>
</ResourceDictionary>